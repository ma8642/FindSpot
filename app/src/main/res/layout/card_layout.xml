<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/roomNameNumber"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/cardview_dark_background"
            android:text="Room"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtProfessor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:layout_below="@id/roomNameNumber"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtProfessor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor2"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:layout_below="@id/txtProfessor"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClassName"
            android:textSize="10sp"
            android:layout_above="@+id/txtProfessor2"
            android:layout_toRightOf="@+id/txtProfessor2"
            android:layout_toEndOf="@+id/txtProfessor2"
            android:layout_marginLeft="118dp"
            android:layout_marginStart="118dp"/>

        <TextView
            android:id="@+id/txtTime"
            android:text="Time"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/txtClassName"
            android:layout_below="@+id/txtClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>



